<?xml version="1.0" encoding="utf-8" ?>
<Addin namespace="MonoDevelop.JavaScript"
		id="JavaScriptSupport"
		name="JavaScript Support"
		author="Harsimran Bath"
		copyright="GNU General Public"
		url="http://www.monodevelop.com"
		description="Adds JavaScript Support to Xamarin Studio."
		category="Web Development"
		version="0.1">

  <Dependencies>
    <Addin id="::MonoDevelop.Ide" version="4.0" />
    <Addin id="::MonoDevelop.Core" version="4.0" />
    <Addin id="::MonoDevelop.SourceEditor2" version="4.0" />
  </Dependencies>

  <Runtime>
    <Import file="Templates\EmptyJSFile.xft.xml"/>
  </Runtime>

  <Extension path="/MonoDevelop/Ide/FileFilters">
    <FileFilter id="JSFile"
		            insertafter="Xml"
		           _label="JavaScript Files"
		           extensions="*.js" />
  </Extension>

  <Extension path = "/MonoDevelop/SourceEditor2/SyntaxModes">
    <Templates file="SyntaxModes\JavaScriptSyntaxMode.xml" />
  </Extension>

  <Extension path="/MonoDevelop/Ide/FileTemplates">
    <FileTemplate id="JSFile" file="Templates\EmptyJSFile.xft.xml"/>
  </Extension>

</Addin>